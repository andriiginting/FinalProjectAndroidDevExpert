<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.andriginting.myapplication.activity.DetailMovieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_back_drop_detail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marginStd"
            android:layout_marginRight="@dimen/marginStd"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:text="ini judul"
                android:textSize="23sp" />


            <TextView
                android:id="@+id/date_release_movie_Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:text="ini subtittle"
                android:textColor="#707070" />

            <TextView
                android:id="@+id/description_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="ini deskripsi"
                android:paddingRight="16dp"
                android:textColor="#707070" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
